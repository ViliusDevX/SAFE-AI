{
  "name": "Guardian Demo",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "postCreateCommand": "docker compose up -d --build",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": { "label": "Dashboard", "onAutoForward": "openBrowser" }
  }
}
